@model Ensino.Web.Models.Aluno

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataNascimento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.DataNascimento, "{0:dd/MM/yyyy}", new { @class = "form-control default-date-picker" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Genero, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <label class="cr-styled">
                    <input type="radio" name="Genero" id="Genero" value="M" @((Model?.Genero ?? "") == "M" ? "checked" : "") /> <i class="fa"></i> Masculino
                </label> <i class="fa fa-male"></i>
                <label class="cr-styled">
                    <input type="radio" name="Genero" id="Genero" value="F" @((Model?.Genero ?? "") == "F" ? "checked" : "") /> <i class="fa"></i> Feminino
                </label> <i class="fa fa-female"></i>
                <label class="cr-styled">
                    <input type="radio" name="Genero" id="Genero" value="N" @((Model?.Genero ?? "") == "N" ? "checked" : "") /> <i class="fa"></i> Não informado
                </label><i class="fa fa-building-o"></i>
            </div>
            @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
