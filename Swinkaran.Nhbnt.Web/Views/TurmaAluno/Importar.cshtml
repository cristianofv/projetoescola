@model Ensino.Web.Models.TurmaAluno

@{
    ViewBag.Title = "Alunos da Turma";
}

<h2>Alunos da Turma</h2>
@using (Html.BeginForm("Importar", "TurmaAluno", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label">Turma</label>
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.TurmaID, new SelectList(Ensino.Web.Business.Regras.ListaTurma(), "ID", "Nome", Model.TurmaID), new { @class = "form-control input-lg" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Arquivo de Imporação de Alunos</label>
        <div>
            @Html.TextBox("file", "", new { type = "file" }) <br />
            @ViewBag.Message
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Importar" class="btn btn-default" />
        </div>
    </div>
</div>
    
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
